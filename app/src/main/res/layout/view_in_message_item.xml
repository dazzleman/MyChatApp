<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ru.ic218.mychatapp.common.InitialsView
            android:id="@+id/messageInAuthorLogo"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            android:layout_gravity="bottom|start"/>

    <LinearLayout
            android:paddingTop="6dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingBottom="4dp"
            android:orientation="vertical"
            android:background="@drawable/bg_in_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/messageInAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/color_author_message_out"
                tools:text="Иван Иванович"/>

        <TextView
                android:id="@+id/messageInText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textSize="13sp"
                android:textColor="@color/black_100"
                tools:text="Иван Иванович \n sdfsdf"/>

        <TextView
                android:id="@+id/messageInTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                tools:text="21:15"
                android:layout_gravity="end"/>

    </LinearLayout>

</LinearLayout>